#include <fcntl.h> // Inclui as definições para open e suas flags 
#include <unistd.h> // Inclui as definições para read, write e close 
#include <stdio.h> // Inclui as definições para printf
#include <stdlib.h>

#define BUFFER_SIZE 128

int main() {
    // Nome do arquivo de entrada
    const char *arquivo_entrada = "lab2_ex1.txt";

    // Ponteiro para o arquivo
    FILE *arquivo;
    char buffer[BUFFER_SIZE + 1]; // +1 para o caractere nulo

    // Abrindo o arquivo de entrada no modo de leitura
    arquivo = fopen(arquivo_entrada, "r");
    if (arquivo == NULL) {
        perror("Não foi possível abrir o arquivo de entrada");
        return EXIT_FAILURE;
    }

    // Lendo o conteúdo do arquivo e exibindo na tela
    size_t bytes_read;
    while ((bytes_read = fread(buffer, 1, BUFFER_SIZE, arquivo)) > 0) {
        buffer[bytes_read] = '\0'; // Adiciona o caractere nulo ao final
        printf("%s", buffer);
    }

    // Fechando o arquivo
    fclose(arquivo);

    return 0;
}
